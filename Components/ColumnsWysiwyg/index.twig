<flynt-component load:on="visible" name="ColumnsWysiwyg">
  <div class="wrapper boxed">
    {% if preContent %}
      <div class="preContent h1">
        {{ preContent}}
      </div>
    {% endif %}
    <div class="content">
      <div class="columns">
        {% for column in columnTexts %}
          <div class="column">
            <img class="image lazyload"
              src="{{ column.image.src }}"
              data-srcset="{{function('wp_get_attachment_image_srcset', box.image.id)}}"
              data-sizes="auto">
            {{ column.columnText|e('wp_kses_post') }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
