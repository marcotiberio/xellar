{% if items|length > 0 %}
  <flynt-component load:on="visible" name="ListingCovers" class="bg-grey">
    <div class="w-full max-w-screen-lg mx-auto p-sm sm:p-md md:p-lg">
      {% if preContentTitle %}
      <div class="w-full flex justify-between items-center">
        <h2>{{ preContentTitle }}</h2>
        <a href="{{ labels.allPostsLink.url }}" class="button--link underline hover:no-underline caption font-bold text-body">{{ labels.allPosts }}</a>
      </div>
      {% endif %}
      <ul class="w-full mx-auto mt-lg md:mt-xl grid grid-cols-1 sm:grid-cols-2 gap-sm sm:gap-md">
        {% for item in items %}
          <li class="grid-item {{ item.post_type }}">
            <div class="content">
              <a href="{{ item.link }}" class="content-link" title="{{ item.title }}">
                <img class="content-image lazyload mb-sm"
                  src="{{ item.thumbnail.src }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                  data-sizes="auto">
                <div class="content-inner mt-[10px]">
                  <div class="title text-blue text-h2">{{ item.title }}</div>
                </div>
              </a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
