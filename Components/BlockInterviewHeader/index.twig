<flynt-component load:on="visible" name="BlockInterviewHeader" class="interviewComponent">
  <div class="flex flex-col-reverse lg:flex-row gap-sm lg:pr-[120px]">
    {% if post.thumbnail %}
    <div class="featuredImage w-full lg:w-1/2 grow">
      <img class="figure-image lazyload object-cover h-auto lg:h-[calc(100vh_-_120px)]"
        src="{{ post.thumbnail.src }}"
        data-srcset="{{function('wp_get_attachment_image_srcset', post.thumbnail.id)}}"
        data-sizes="auto">
    </div>
    {% endif %}
    <div class="h-auto lg:h-auto w-full lg:w-1/2 grow flex flex-col justify-start gap-xl">
      <h1>{{ post.title }}</h1>
      <div class="lg:w-[33.3vw] flex flex-col gap-lg">
        <div>{{ post.artistBio|wpautop }}</div>
      </div>
    </div>
  </div>
</flynt-component>
