<flynt-component 
  load:on="visible" 
  name="BannerImageText">
  <div class="h-full w-full p-lg">
    {% if contentTitle %}
    <div 
      class="w-full h-full {# {% if image %}h-full{% else %}h-[calc(100vh_-_105px)]{% endif %}  #} block" 
      {{ titlePosition ? 'data-title-position="' ~ titlePosition ~ '"' }} 
      style="background-color:{% if options.colorBackground %}{{ options.colorBackground }}{% else %}var(--black){% endif %};">
      <div class="w-3/4 pb-md">
        {{ contentTitle }}
      </div>
    </div>
    {% endif %}
    <figure class="figure my-0 mx-auto">
      {% if image %}
        <img class="figure-image lazyload object-contain"
          src="{{ image.src }}"
          data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
          data-sizes="auto"
          alt="{{ image.alt|e }}">
      {% endif %}
    </figure>
    
  </div>
</flynt-component>
