<flynt-component load:on="visible" name="NavigationFooter" class="bg-blue">
  <div class="w-full max-w-screen-xl mx-auto p-sm flex flex-row justify-between items-center">
    <div class="w-full flex flex-col lg:flex-row justify-between gap-lg items-center">
      {% if copyrightFooter or emailFooter %}
        <div class="w-full: md:w-1/2 flex flex-row justify-start items-center gap-lg">
          <div class="text-menu text-white font-extrabold">{{ copyrightFooter }}</div>
          <a href="{{ emailFooter.url }}" class="text-menu text-white font-extrabold hover:underline">{{ emailFooter.title }}</a>
        </div>
      {% endif %}
      {% if menu %}
      <nav class="navigation w-full: md:w-1/2" aria-label="{{ labels.ariaLabel }}">
        {% include 'Partials/_menu.twig' with { 'items': menu.get_items, 'level': '0', 'maxLevel': maxLevel } only %}
      </nav>
    {% endif %}
    </div>
  </div>
</flynt-component>
