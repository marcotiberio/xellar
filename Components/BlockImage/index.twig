<flynt-component load:on="visible" name="BlockImage">
  <div class="{{ options.size != 'full' }}">
    <figure class="figure" {{ options.size ? 'data-image-size="' ~ options.size ~ '"' }}>
      {% if image %}
        <img class="figure-image lazyload aspect-4/3 md:aspect-16/6 w-screen object-cover"
          src="{{ image.src }}"
          data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
          data-sizes="auto"
          alt="{{ image.alt|e }}">
      {% endif %}
      {% if image.caption %}
        <figcaption class="caption">{{ image.caption|e }}</figcaption>
      {% endif %}
    </figure>
  </div>
</flynt-component>
