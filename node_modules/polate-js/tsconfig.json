{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"removeComments": true,
		"noImplicitAny": false,
		"noEmitHelpers": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"lib": ["es2017", "es5"],
		"outDir": "./",
		"rootDir": "./src/"
	},
	"allowSyntheticDefaultImports": true,
	"exclude": ["node_modules", "src/__tests__"]
}
